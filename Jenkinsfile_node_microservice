pipeline {
    agent any
    triggers {
        pollSCM('*/1 * * * *')
    }
    stages {
        stage('build') {
            steps {
                echo "Building Node application"
            }
        }
        stage('deploy-dev') {
            steps {
                echo "Deployment of DEV"
            }
        }
        stage('test-dev') {
            steps {
                echo "Testing on DEV"
            }
        }
        
        stage('deploy-int') {
            steps {
                echo "Deployment of INT"
            }
        }
        stage('test-int') {
            steps {
                echo "Testing on INT"
            }
        }

        stage('deploy-prod') {
            steps {
                echo "Deployment of PROD"
            }
        }
        stage('test-prod') {
            steps {
                echo "Testing on PROD"
            }
        }
    }
}